<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.blackmagicwoman.mybatistest.dao.TestDao">
    <delete id="deleteNotIn">
        delete
        from emp
        where e_name not in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>

    <!-- 根据主键查询-->
    <select id="getById" resultType="com.blackmagicwoman.mybatistest.entity.EmpEntity" parameterType="java.lang.Integer" >
        select  *
        from emp
        where emp_no = #{empNo}
    </select>

    <select id="seleteNotIn" resultType="com.blackmagicwoman.mybatistest.entity.EmpEntity" parameterType="java.util.List">
        select *
        from emp
        where e_name not in
              <foreach collection="list" item="item" separator="," open="(" close=")">
                  #{item}
              </foreach>
    </select>

    <select id="getCursor" resultType="com.blackmagicwoman.mybatistest.entity.EmpEntity" parameterType="java.lang.Integer">
        select * from pms_category limit #{limit}
    </select>
</mapper>
